{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "America/Los_Angeles",
  "schedule": [
    "after 10pm every weekday",
    "before 5am every weekday",
    "every weekend"
  ],
  "labels": ["dependencies"],
  "assignees": ["krickert"],
  "commitMessagePrefix": "chore(deps):",
  "prConcurrentLimit": 5,
  "branchConcurrentLimit": 5,
  "packageRules": [
    {
      "description": "Group all Quarkus platform updates together",
      "matchDatasources": ["maven"],
      "matchPackagePatterns": ["^io\\.quarkus"],
      "groupName": "Quarkus platform",
      "schedule": ["every weekend"]
    },
    {
      "description": "Group all gRPC and Protobuf updates together",
      "matchDatasources": ["maven"],
      "matchPackagePatterns": ["^io\\.grpc", "^com\\.google\\.protobuf"],
      "groupName": "gRPC and Protobuf",
      "schedule": ["every weekend"]
    },
    {
      "description": "Auto-merge patch updates for stable dependencies",
      "matchDatasources": ["maven"],
      "matchUpdateTypes": ["patch"],
      "matchPackagePatterns": ["^org\\.apache", "^com\\.fasterxml"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "description": "Weekly updates for testing dependencies",
      "matchDatasources": ["maven"],
      "matchPackagePatterns": ["junit", "mockito", "assertj", "testcontainers"],
      "groupName": "Testing dependencies",
      "schedule": ["every weekend"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "assignees": ["krickert"]
  }
}

